block('footer').elem('menu')(
    content()(function() {
        var _this = this;

        return [
            {
                block : 'menu',
                mods : {
                    theme : _this._footerMods.theme,
                    bkg : _this._footerMods.bkg,
                    size : 'm',
                    horizontal : true
                },
                content : _this._footer.menu.map(function(item) {
                    return {
                        block : 'menu-item',
                        mods : { type : 'link' },
                        url : item.url,
                        content : item.title
                    };
                })
            }
        ];
    })
);
