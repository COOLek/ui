.icon_bkg_color
{
    &.icon_currency_rub
    {
        background-image: url('../_currency/icon_currency_rub.svg');
    }

    &.icon_tool_calendar
    {
        background-image: url('../_tool/icon_tool_calendar.svg');
    }

    &.icon_tool_search
    {
        background-image: url('../_tool/icon_tool_search.svg');
    }

    for $name in $cards
    {
        &.icon_card_{$name}
        {
            background-image: url('../_card/icon_card_' + $name + '.svg');
        }
    }

    for $name in $actions
    {
        &.icon_action_{$name}
        {
            background-image: url('../_action/icon_action_' + $name + '.svg');
        }
    }

    for $name in $banks
    {
        &.icon_bank_{$name}
        {
            background-image: url('../_bank/icon_bank_' + $banks[$name] + '.svg');
        }
    }

    for $name in $networks
    {
        &.icon_network_{$name}
        {
            background-image: url('../_network/icon_network_' + $name + '.svg');
        }
    }

    for $name in $tools
    {
        &.icon_tool_{$name}
        {
            background-image: url('../_tool/icon_tool_' + $name + '.svg');
        }
    }

    for $name in $arrow
    {
        &.icon_arrow_{$name}
        {
            background-image: url('../_arrow/icon_arrow_' + $name + '.svg');
        }
    }

    for $name in $user
    {
        &.icon_user_{$name}
        {
            background-image: url('../_user/icon_user_' + $name + '.svg');
        }
    }
}

.icon_bkg_color.icon_tool_pdf.icon_size_s,
.icon_bkg_color.icon_tool_email.icon_size_s
{
    width:  ($icon_size_s - 4);
    height: ($icon_size_s - 4);
    margin-right: 4px;
    display: inline-block;
}
