block('button')(
    content()(function() {
        var ctx = this.ctx,
            content = [ctx.icon && { elem: 'icon', content: ctx.icon }];
        ctx.text && content.push({ elem: 'text', content: ctx.text });
        return content;
    },

    elem('icon').tag()('span'),

    match(function() { return typeof this.ctx.content !== 'undefined'; })(function() {
        return this.ctx.content;
    }))
);
