block('input')(
    def()(function() {
        var mods = this.mods;
        return applyNext({
            _mods: {
                theme: mods.theme,
                size: mods.size
            }
        });
    }),
    match(function() { return this.ctx.addon; }).def()(function() {
        this.mods['has-addon'] = true;
        return applyNext();
    })
);
