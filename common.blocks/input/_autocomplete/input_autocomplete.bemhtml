block('input').mod('autocomplete', true)(
    def()(function() {
        applyNext({ _input : this.ctx });
    }),
    elem('box')(
        content()(function() {

            function mapItems(item) {
                if (item.group) {
                    return {
                        elem : 'group',
                        title : item.title,
                        content : item.group.map(mapItems)
                    };
                } else {
                    return {
                        block : 'menu-item',
                        val : item.val,
                        content : item.content
                    };
                }
            }

            return [
                applyNext(),
                {
                    block : 'popup',
                    mods : {
                        target : 'anchor',
                        theme : this._input.mods.theme,
                        bkg : this._input.mods.bkg,
                        size : this._input.mods.size
                    },
                    directions : ['bottom-left', 'bottom-right'],
                    content : [
                        {
                            block : 'menu',
                            mods : {
                                mode : 'radio-check',
                                view : 'dropdown',
                                theme : this._input.mods.theme,
                                bkg : this._input.mods.bkg,
                                size : this._input.mods.size
                            },
                            content : this._input.options.map(mapItems)
                        }
                    ]
                }
            ];
        })
    )
);
