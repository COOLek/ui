block('mask')(
    tag()('span'),
    js()(true),
    content()(function() {
        if(this.ctx.val){
            var num = this.ctx.val.split(/\*+/);
            if(num[0]){
                num[0] = num[0].trim().substring(0, 4);
            }
            if(num[1]){
                num[1] = num[1].trim().substring(0, 4);
            }
            return num[0] + ' ●●●● ' + num[1];
        }
        return this.ctx.content;
    })
);
