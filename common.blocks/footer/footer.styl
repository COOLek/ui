.footer
{
    color:       #fff;
    font-family: 'Roboto', sans-serif;
    font-weight: 300;
    font-size:   12px;

    border-top: 1px solid rgba(255, 255, 255, .3);
}

.footer__inner
{
    width: 1250px;
    height: 150px;

    box-sizing: border-box;

    padding:    40px 40px 40px 28px;
    margin:     auto;
}

.footer__menu
{
    opacity: .4;

    float: left;

    box-sizing: border-box;
    padding:    25px 0;
    width:      50%;
}

.footer__additional
{
    padding-top: 35px;

    float: left;

    margin-left: 20px;

    opacity: .5;
}

.footer__copyright
{
    opacity: .5;

    line-height: 1.6;

    padding: 15px 0;

    float: right;
}
