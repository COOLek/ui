block('popup-test')(
    js()(true),
    content()(function() {
        var ctx = this.ctx;
        var mods = ctx.mods;

        var anchor = ctx.anchor;
        anchor.mods = this.extend(anchor.mods, {
            theme: mods.theme,
            size: mods.size
        });

        var popup = ctx.popup;
        popup.mods = this.extend(popup.mods, mods);

        return [
            anchor,
            popup
        ];
    })
);
