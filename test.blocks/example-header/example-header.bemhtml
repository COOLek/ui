block('example-header')(
    content()(function() {
        return [
            {
                block: 'heading',
                mods: { theme: 'alfa-on-color' },
                lvl: 1,
                content: this.ctx.title
            },
            this.ctx.desc && {
                block: 'paragraph',
                mods: { theme: 'alfa-on-color' },
                content: this.ctx.desc
            }
        ];
    })
);
