.popup_theme_alfa {
    display:    none;
    visibility: hidden;

    margin: -9999px 0 0 -9999px;

    border-radius: popup_radius;
    box-sizing: border-box;

    &.popup_js_inited {
        display: block;
    }

    &.popup_visible {
        visibility: visible;
        margin: 0;
    }

    &.popup_view_column {
        background-color: rgba(0, 0, 0, 0.6);

        &.popup_visible {
            margin: 0 0 0 -35px;
            opacity: 1;
//            transition: opacity 0.5s, visibility 0.5s, margin 0.5s step-start;
        }

        bottom: 0;
        min-width: 300px;
        position: fixed;
        top: 0 !important;
        padding: 20px 35px;
        border-radius: 0;
        opacity: 0;
//        transition: opacity 0.5s, visibility 0.5s, margin 0.5s step-end;
    }

    &.message__control {
        padding: 12px 15px;
        color: white;
        background-color: #fc5c5e;
        max-width: 220px;
        box-shadow: 1px 2px 8px rgba(0, 0, 0, 0.4);
    }

    &.popup_visible.popup_direction_right-top.message__control {
        margin: -4px 0 0 5px;
    }

    &.popup_visible.popup_direction_left-top.message__control {
        margin: -4px 0 0 -5px;
    }

    &.popup_visible.message__control.popup_direction_right-top::before,
    &.popup_visible.message__control.popup_direction_left-top::after {
        display: inline-block;
        content: '';
        width: 0;
        height: 0;
        vertical-align: middle;
    }

    &.popup_visible.message__control.popup_direction_right-top::before {
        margin: -2px 15px 0px -22px;
        border-top: 7px solid transparent;
        border-right: 7px solid #fc5c5e;
        border-bottom: 7px solid transparent;
    }

    &.popup_visible.message__control.popup_direction_left-top::after {
        margin: -2px -22px 0px 15px;
        border-top: 7px solid transparent;
        border-left: 7px solid #fc5c5e;
        border-bottom: 7px solid transparent;
    }
}
