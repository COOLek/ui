networks = ( 'twitter' 'vk' 'facebook' )
cards = ( 'visa' 'visaelectron' 'mastercard' 'maestro' )

.icon_bkg_color
{
    for $name in networks
    {
        &.icon_network_{$name}
        {
            background-image: url(../assets/_bkg/_color/$name.svg);
        }
    }

    for $name in cards
    {
        &.icon_card_{$name}
        {
            background-image: url(../assets/_bkg/_color/card/$name.svg);
        }
    }
}
