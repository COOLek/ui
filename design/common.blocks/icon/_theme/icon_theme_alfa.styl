banks = ( 'alfa-bank' 'baltijsky' 'bank_moskvy' 'bank_saint-peterburg' 'beeline' 'binbank' 'credit_evropa_bank' 'home_credit' 'mdm' 'moscow_credit_bank' 'mts' 'otkrytie' 'otp' 'promsvyazbank' 'qiwi' 'raiffeisenbank' 'rocketbank' 'rosbank' 'russkii_standart' 'sberbank' 'skb' 'tinkoff' 'trast' 'ubrr' 'unicredit' 'uralsib' 'vozrogdenie' 'vtb24' 'yandex_money' )
cards = ( 'visa' 'visaelectron' 'mastercard' 'maestro' )
tools = ( 'print' 'pdf' )

.icon_theme_alfa
{
    vertical-align: middle;

    background-repeat: no-repeat;
    background-size:   contain;

    &.icon_size_s
    {
        width:  $icon_size_s;
        height: $icon_size_s;
    }

    &.icon_size_m
    {
        width:  $icon_size_m;
        height: $icon_size_m;
    }

    &.icon_size_l
    {
        width:  $icon_size_l;
        height: $icon_size_l;
    }

    &.icon_size_xl
    {
        width:  $icon_size_xl;
        height: $icon_size_xl;
    }

    for $name in tools
    {
        &.icon_tool_{$name}
        {
            background-image: url('../assets/_theme/_alfa/icon/_tool/icon_tool_' + $name + '.svg');
        }
    }

    for $name in banks
    {
        &.icon_bank_{$name}
        {
            background-image: url('../assets/_theme/_alfa/icon/_bank/icon_bank_' + $name + '.svg');
        }
    }

    for $name in cards
    {
        &.icon_card_{$name}
        {
            background-image: url('../assets/_bkg/_color/icon/_card/icon_card_' + $name + '.svg');
        }
    }
}
