$fontSize = (12 12 15 25);
$controlPadding = (13 15 17 19);
$controlMinHeight = (2 4 6 8);

.textarea_theme_alfa
{
    font-family: 'Roboto', sans-serif;

    box-sizing: border-box;

    position: relative;
    display:  inline-block;

    padding: 0;
    margin: 0;

    vertical-align: top;
    line-height: inherit;

    border-radius: 6px;

    outline:    none;
    background: none;

    -webkit-appearance: none;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);

    &::-webkit-input-placeholder
    {
        text-indent: 0;
    }

    &::-moz-placeholder
    {
        opacity: 1;
    }

    /* Decorative element (inner background) */
    &:before
    {
        position: absolute;
        top:      1px;
        right:    1px;
        bottom:   1px;
        left:     1px;

        content: '';

        border-radius: 5px;
    }

    &.textarea_focused
    {
        z-index: 1;
    }

    &.textarea_disabled
    {
        cursor: default;

        resize: none;

        &:before
        {
            display: none;
        }
    }

    for $sizeVal, i in s m l xl {
        &.textarea_size_{$sizeVal}
        {
            font-size: ($fontSize[i])px;
            padding: 4px ($controlPadding[i])px;
            min-height: ($controlMinHeight[i])em;
        }
    }
}
