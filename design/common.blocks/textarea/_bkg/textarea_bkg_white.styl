.textarea_bkg_white
{

    background: transparent;

    border-width: 1px;
    border-style: solid;
    border-color: $gray;

    transition: all 200ms ease;

    &::-webkit-input-placeholder
    {
        color: #999;
    }

    &::-moz-placeholder
    {
        color: #999;
    }

    &.textarea_disabled
    {
        background: rgba(0, 0, 0, 0.08);

        color: rgba(0, 0, 0, 0.4);
    }

    &.textarea_hovered,
    &.textarea_focused
    {
        border-color: $green;
    }
}
