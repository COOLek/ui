.form-field_theme_alfa
{
    padding-bottom: 20px;

    &.form-field_view_line
    {
        .form-field__label
        {
            float: left;
        }

        .form-field__control
        {
            padding-left: 115px;
        }
    }

    &.form-field_view_compact
    {
        .form-field__label
        {
            padding-bottom: 10px;
        }
    }

    &.form-field_size_l
    {
        .form-field__label
        {
            padding-top: round($control_size_l / 4);
        }

        .form-field__control
        {
            line-height: $control_size_l;
        }

        &.form-field_view_line
        {
            .form-field__label
            {
                padding-right: 15px;

                width: 100px;
            }
        }
    }

    &.form-field_size_m
    {
        .form-field__label
        {
            padding-top: 18px;
        }

        .form-field__control
        {
            line-height: $control_size_m;
        }
    }

    &.form-field_disabled
    {
        opacity: 0.4;
    }
}
