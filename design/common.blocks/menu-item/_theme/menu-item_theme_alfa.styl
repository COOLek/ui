.menu-item_theme_alfa
{
    position: relative;

    white-space: nowrap;

    &.menu-item_disabled
    {
        opacity: 0.3;
    }

    &.menu-item_checked
    {
        cursor: default;
    }

    &.menu-item_hovered
    {
        cursor: pointer;
    }

    &.menu-item_type_link
    {
        .menu-item__link
        {
            outline: none;
        }

        &.menu-item_checked
        {
            .menu-item__link
            {
                border: 0;
            }
        }
    }

    &.menu-item_horizontal
    {
        display: inline-block;

        &:first-child
        {
            padding-left: 0!important;
        }

        &:last-child
        {
            padding-right: 0!important;
        }
    }
}

