paddingVert = (3 4 5 6);
paddingHor = (inputs_padding_s inputs_padding_m inputs_padding_l inputs_padding_xl);
fontSize = (links_font_size_s links_font_size_m links_font_size_l links_font_size_xl);
inputFontSize = (inputs_font_size_s inputs_font_size_m inputs_font_size_l inputs_font_size_xl);

.menu-item_theme_alfa
{
    position: relative;

    white-space: nowrap;

    &.menu-item_disabled
    {
        opacity: 0.3;
    }

    &.menu-item_checked
    {
        cursor: default;
    }

    &.menu-item_hovered
    {
        cursor: pointer;
    }

    &.menu-item_type_link
    {
        .menu-item__link
        {
            outline: none;
        }

        &.menu-item_checked
        {
            .menu-item__link
            {
                border: 0;
            }
        }
    }

    &.menu-item_horizontal
    {
        display: inline-block;

        &:first-child
        {
            padding-left: 0!important;
        }

        &:last-child
        {
            padding-right: 0!important;
        }
    }
}

for sizeVal, i in s m l xl {
    .menu_size_{sizeVal}
    {
        .menu-item_theme_alfa.menu-item_horizontal
        {
            font-size: (fontSize[i]);
        }

        .menu-item_theme_alfa
        {
            font-size: (inputFontSize[i])px;
            padding: (paddingVert[i])px (paddingHor[i])px;
        }
    }
}

.menu_view_dropdown.menu_theme_alfa
{
    .menu-item:first-child
    {
        margin-top: popup_radius;
    }
    .menu-item:last-child
    {
        margin-bottom: popup_radius;
    }

    .menu__group
    {
        .menu-item
        {
            margin-bottom: 0;
            margin-top:    0;
        }
    }
    .menu-item_hovered
    {
        background-color: rgba(0, 0, 0, 0.1);
    }
}
