.select_bkg_white
{
    .select__tick
    {
        background-image: url(../__tick/_bkg/select__tick_bkg_white.svg);
    }

    &.select_size_s .select__tick,
    &.select_size_m .select__tick
    {
        background-size: 11px;
    }

    &.select_size_l .select__tick,
    &.select_size_xl .select__tick
    {
        background-size: 16px;
    }

    .select__button
    {
        color:      black;
    }

    &.select_opened .select__button
    {
        background: $green;
    }
}
