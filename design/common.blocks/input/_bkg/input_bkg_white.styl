.input_bkg_white
{
    background: #b0afb4;
    padding: 1px;

    color: #000;

    &:before
    {
        background: #fff;
    }

    .input__control
    {
        color: #000;
    }

    .input__clear
    {
        background-image: url(../__clear/_bkg/input__clear_bkg_white.svg);
    }

    &.input_mode_link
    {
        background: #fff;

        &.input_hovered
        {
            background: #adadad;
        }

        &.input_focused
        {
            background: #ff9900;
        }
    }

    &.input_focused
    {
        background: #ff9900;

        &:before
        {
            top:    2px;
            right:  2px;
            bottom: 2px;
            left:   2px;
        }
    }

    &.input_hovered
    {
        .input__trigger
        {
            border-bottom: none;
        }
    }

    .input__trigger
    {
        color: #333333 !important;
        border-bottom-color: #333333;
    }

    &.input_disabled
    {
        background: rgba(0, 0, 0, 0.08);

        .input__box,
        .input__control
        {
            color: rgba(0, 0, 0, 0.4);
        }
    }

    &.input_size_s .input__clear,
    &.input_size_m .input__clear
    {
        background-size: 10px;
    }

    &.input_size_l .input__clear,
    &.input_size_xl .input__clear
    {
        background-size: 14px;
    }

    &.input_invalid
    {
        background: #fc5c5e;
    }

}
