.input_type_inplace
{
    border-color: transparent;
    cursor: pointer;
    max-width: 100%;
    white-space: nowrap;
    overflow: hidden;

    &.input_focused
    {
        cursor: text;
    }

    &.input_focused .link
    {
        display: none;
    }

    .input__box
    {
        display: table-cell;
        vertical-align middle;
    }

    &.input_focused .input__box
    {
        padding-right: 0;
    }


    &.input_focused .input__control
    {
        display: block;
    }

    .input__control
    {
        display: none;
        padding-left: 0 !important;

    }

    &.input_size_s
    {
        .input__box
        {
            height:       control_size_s;
            padding-left: inputs_padding_s;
            padding-right: inputs_padding_s;
        }
    }

    &.input_size_m
    {
        .input__box
        {
            height:       control_size_m;
            padding-left: inputs_padding_m;
            padding-right: inputs_padding_m;
        }
    }

    &.input_size_l
    {
        .input__box
        {
            height:       control_size_l;
            padding-left: inputs_padding_l;
            padding-right: inputs_padding_l;
        }
    }

    &.input_size_xl
    {
        .input__box
        {
            height:       control_size_xl;
            padding-left: inputs_padding_xl;
            padding-right: inputs_padding_xl;
        }
    }
}
