.radio_bkg_color
{
    color: #fff;

    .radio__box
    {
        transition: all 200ms ease;

        background: transparent;

        border-width: 1px;
        border-style: solid;
        border-color: #fff;
        border-color: alpha(#fff, 0.5);

    }

    &.radio_focused,
    &.radio_hovered
    {
        .radio__box
        {
            border-color: #fff;
            background: alpha(#fff, 0.2);
        }
    }

    &.radio_checked
    {
        .radio__box
        {
            border-color: #fff;

            &:after
            {
                background: #fff;
            }
        }
    }

    &.radio_disabled
    {
        color: #fff;
        color: alpha(#fff, 0.2);

        .radio__box
        {
            border-color: alpha(#fff, 0.2);
            background: alpha(#fff, 0.1);

            &:after
            {
                opacity: 0.4;
            }
        }
    }
}
