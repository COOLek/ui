.label_theme_alfa
{
    font-family: font-family;
    font-weight: 400;

    display: inline-block;

    padding-right: 15px;

    &.label_right
    {
        padding-right: 0;
        padding-left:  15px;
    }

    .label__inner
    {
        display: inherit;

        vertical-align: top;
    }

    &.label_size_s
    {
        font-size: inputs_font_size_s;
    }

    &.label_size_m
    {
        font-size: inputs_font_size_m;
    }

    &.label_size_l
    {
        font-size: inputs_font_size_l;
    }

    &.label_size_xl
    {
        font-size: inputs_font_size_xl;
    }
}
