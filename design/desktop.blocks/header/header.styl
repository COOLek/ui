.header
{
    width:  100%;

    position: fixed;

    color:       #fff;
    font-family: $font_family;
    font-weight: $font_weight;
    z-index: 2000;

    transition: all 200ms ease;

    &.header_fixed
    {
        background-color: rgba(1,1,1,.6);
    }

    .header__inner
    {
        width: $page_width;

        padding-left: 28px
        margin:       auto;
        box-sizing:   border-box;
    }

    .header__logo
    {
        float:          left;
        vertical-align: top;
        box-sizing:     border-box;

        padding:      25px 35px;
        margin-right: 30px;

        border-radius:    0 0 5px 5px;
        background-color: $red_another;
    }

    .header__content
    {
        padding-top: 20px;
    }

    .header__menu
    {
        float: left;
    }

    .header__support
    {
        float:          right;
        vertical-align: top;

        margin-right: 30px;
    }

    .header__support-phone
    {
        padding-top: 10px;
    }

    .header__user
    {
        float: right;
    }

    .header__user-link
    {
        line-height: 26px;
    }
}
